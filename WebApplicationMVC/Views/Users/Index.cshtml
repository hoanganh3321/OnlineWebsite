@model List<WebApplicationMVC.Models.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Không có người dùng nào.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Họ tên</th>
                <th>Quyền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
}